<section id="news" class="bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="br1 mt-120">
        <div class="br2">
          <h2 class="mx-4 font-weight-bold">News</h2>
        </div>
      </div>
    </div>
    
    <div class="row">
      {%- set postslist = collections.posts | head(4) -%}
      {%- for post in postslist -%}
          <div class="col-md-6">
            <div class="text-center px-4 mt-80">
              <a class="link-decor" href="{{post.url}}">
                <img class="news-img" src="{{post.data.thumbnail}}">
                <p class="mt-4">
                  <b>{{ post.data.title }}</b>
                </p>
              </a>
              <p class="text-left news-text">{{post.data.summary}}</p>
            </div>
          </div>
      {%- endfor -%}
    
    </div>
    <div class="text-center font-weight-bold my-5">
      <a class="link-decor" href="/news">See More</a>
    </div>
  </div>
</section>

<section id="bio" class="pb-120">
  <div class="container">
  {%- for biography in collections.bio -%}
    <div class="row justify-content-center">
      <div class="br1-bio my-max">
        <div class="br2-bio">
          <h2 class="mx-4 font-weight-bold">{{biography.data.heading}}</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 px-5 text-justify">
        <p>{{biography.data.content}}</P>
      </div>
      <div class="col-md-6">
        <img class="mt-n3" src="{{biography.data.image}}" height="500px" width="100%">
      </div>
    </div>
  {%- endfor -%}
  </div>
</section>

<section id="music" class="pb-120 bg-white">
  <div class="container">
    {%- for m in collections.music -%}
    <div class="row justify-content-center">
      <div class="br1 my-max">
        <div class="br2">
          <h2 class="mx-4 font-weight-bold">{{m.data.heading}}</h2>
        </div>
      </div>
    </div>
    <div class="text-center mt-n80">
      <p>{{m.data.subheading}}</p>
    </div>
    <div class="row mt-80 my-auto">
      <div class="col-md-6 text-center">
        <img class="mx-auto drop-shadow" src="{{m.data.image}}" height="250" width="85%">
      </div>
      <div class="col-md-6 text-left my-auto">
        <div class="text-left">
          <ul class="list-no-style my-auto">
            <li class="my-2"><a class="link-decor" href="{{m.data.media1.link}}" target="_blank"><b>{{m.data.media1.title}}</b></a></li>
            <li class="my-2"><a class="link-decor" href="{{m.data.media2.link}}" target="_blank"><b>{{m.data.media2.title}}</b></a></li>
            <li class="my-2"><a class="link-decor" href="{{m.data.media3.link}}" target="_blank"><b>{{m.data.media3.title}}</b></a></li>
          </ul>
        </div>
      </div>
    </div>
    {%- endfor -%}
  </div>
</section>

