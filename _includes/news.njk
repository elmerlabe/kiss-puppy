---
layout: base.njk
title: News
---

<section>
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="font-weight-bold mb-5">{{title}}</h1>
        <img src="{{thumbnail}}" width="90%" height="55%">
        <p>{{ content | safe }}</p>
        <p class="news-date text-muted">Posted on {{ date | readableDate }}</p>
        <h5 class="text-right mt-3">
          <a class="link-decor" href="/news">← Back to News Page</a>
        </h5>
      </div>
    </div>
  </div>
</div>
</section>