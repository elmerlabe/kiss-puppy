title: News
---

<section>
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="font-weight-bold mb-5">{{title}}</h1>
        <img src="{{thumbnail}}">
        <p>{{ content | safe }}</p>
        <small class="news-date text-muted">Posted on {{ date }}</small>
      </div>
    </div>
  </div>
</section>
